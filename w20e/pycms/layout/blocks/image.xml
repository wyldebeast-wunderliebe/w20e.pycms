<?xml version="1.0"?>
     
<form id="edit_image_block"> 

  <data>
    <name/>
    <img/>
  </data>

  <model>
    <properties id="required">
      <bind>name</bind>
      <bind>img</bind>
      <required>True</required>
    </properties>
  </model>

  <view>

    <input id="name" bind="name">
      <label>Name</label>
      <property name="cols">40</property>
    </input>

    <reference id="data" bind="img">
      <label>Image</label>
    </reference>

    <group id="submission" layout="flow">
      <property name="orientation">h</property>

      <submit id="save">
        <label>Save</label>
      </submit>
      
      <cancel id="cancel">
        <label>Cancel</label>
      </cancel>
    </group>

  </view>

  <submission type="attr">
    <property name="attr_name">_DATA</property>
    <property name="use_blobstorage">True</property>
  </submission>

</form>
