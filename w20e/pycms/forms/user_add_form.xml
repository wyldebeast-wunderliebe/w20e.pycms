<?xml version="1.0"?>
     
<form id="user_add">

  <data>
    <name/>
    <email/>
  </data>

  <model>
    <properties id="required">
      <bind>name</bind>
      <bind>email</bind>
      <required>True</required>
    </properties>
  </model>

  <view>

    <input id="name" bind="name">
      <label>Name</label>
    </input>

    <input id="email" bind="email">
      <label>Email</label>
      <hint>Email is also account id!</hint>
    </input>

    <group id="submission" layout="flow">
      <property name="orientation">h</property>
     
      <submit id="save">
        <label>Save</label>
      </submit>
      
      <cancel id="cancel">
        <label>Cancel</label>
      </cancel>
    </group>

  </view>

  <submission type="methodcall">
    <property name="action">javascript: pycms_acl.addUser()</property>
    <property name="submit_method">acl.add_user</property>
  </submission>

</form>
