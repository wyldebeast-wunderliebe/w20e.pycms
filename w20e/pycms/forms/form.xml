<?xml version="1.0"?>

<form id="form"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="/home/dokter/Work/w20e/loonwijzer/educoeff/GIT/eggs/wageindicator.educoeff/wageindicator/educoeff/forms/gw20eforms.xsd">

  <data>
    <name/>
    <header_text/>
    <footer_text/>
    <form/>
  </data>

  <model>
    <properties id="required">
      <bind>name</bind>
      <required>True</required>
    </properties>

    <properties id="file_types">
      <bind>form</bind>
      <datatype>file</datatype>
    </properties>

  </model>

  <view>

    <input id="name" bind="name">
      <label>Name</label>
    </input>

    <richtext id="header_text" bind="header_text">
      <label>Text above form</label>
      <property name="rows">5</property>
      <property name="cols">80</property>
    </richtext>

    <richtext id="footer_text" bind="footer_text">
      <label>Text below form</label>
      <property name="rows">5</property>
      <property name="cols">80</property>
    </richtext>

    <file id="form" bind="form">
      <label>XML definition of form</label>
    </file>

    <group id="submission" layout="flow">
      <property name="orientation">h</property>

      <submit id="save">
        <label>Save</label>
      </submit>

      <cancel id="cancel">
        <label>Cancel</label>
      </cancel>
    </group>

  </view>

  <submission type="attr">
     <property name="attr_name">_DATA</property>
  </submission>

</form>
