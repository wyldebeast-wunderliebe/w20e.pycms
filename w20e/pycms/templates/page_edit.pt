<html xmlns="http://www.w3.org/1999/xhtml" 
      xml:lang="en" 
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="admin.macros['master']">

  <head/>

  <body>
    
    <div metal:fill-slot="content">

      <h1 class="edit_header" tal:content="view.title"></h1>

      <div class="status" tal:condition="status">${status}</div>
      <div class="error" tal:condition="errors">${errors}</div>
      
      <p tal:content="structure python:view.renderform(errors=errors, status=status)"></p>      
      
    </div>

  </body>
</html>
