<html xmlns="http://www.w3.org/1999/xhtml" 
      xml:lang="en" 
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="body_admin.macros['master']"
      >

  <head>
    <metal:fill-slot fill-slot="extra_css_slot">
      <style>
        #lbpanel {
        display: block;
        }
        
        #wrapper {
        background-color: #ffffff;
        z-index: 1001;
        width: 80%;
        position: absolute;
        margin-left: auto;
        margin-right: auto;
        }
      </style>
    </metal:fill-slot>
  </head>

  <body>

    <div metal:fill-slot="content">
      
      <h1>Add new <span tal:replace="view.content_type">content</span></h1>
      
      <div class="error" tal:condition="errors">${errors}</div>
      
      <p tal:content="structure python:view.renderform()"></p>
    </div>

  </body>
</html>
